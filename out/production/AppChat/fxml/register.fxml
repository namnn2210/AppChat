<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          stylesheets="/css/register.css"
          fx:controller="appchat.app.controllers.RegisterController">
    <children>

        <Text text="Create new account"
              fx:id="title"
              GridPane.rowIndex="0"
              GridPane.columnSpan="2"
        />

        <StackPane styleClass="username"
                   GridPane.rowIndex="1"
                   GridPane.columnIndex="0">
            <children>
                <VBox>
                    <Label text="Username" fx:id="usernameLabel"/>
                    <TextField fx:id="usernameField"/>
                </VBox>
            </children>
        </StackPane>


        <StackPane styleClass="email"
                   GridPane.rowIndex="2"
                   GridPane.columnIndex="0">
            <children>
                <VBox>
                    <Label text="Email Address" fx:id="emailLabel"/>
                    <TextField fx:id="emailField"/>
                </VBox>
            </children>
        </StackPane>

        <StackPane styleClass="password"
                   GridPane.rowIndex="3"
                   GridPane.columnIndex="0">
            <children>
                <VBox>
                    <Label text="Password" fx:id="passwordLabel"/>
                    <PasswordField fx:id="passwordField"/>
                </VBox>
            </children>
        </StackPane>

        <StackPane styleClass="confirmPassword"
                   GridPane.rowIndex="4"
                   GridPane.columnIndex="0">
            <children>
                <VBox>
                    <Label text="Confirm Password" fx:id="confirmPasswordLabel"/>
                    <PasswordField fx:id="confirmPasswordField"/>
                </VBox>
            </children>
        </StackPane>

        <StackPane styleClass="fullName"
                   GridPane.rowIndex="5"
                   GridPane.columnIndex="0">
            <children>
                <VBox>
                    <Label text="Full Name" fx:id="fullNameLabel"/>
                    <TextField fx:id="fullNameField"/>
                </VBox>
            </children>
        </StackPane>

        <StackPane styleClass="gender" GridPane.rowIndex="6" GridPane.columnIndex="0">
            <children>
                <VBox>
                    <Label text="Gender" fx:id="genderLabel"/>
                    <VBox styleClass="genderChoice">
                        <children>
                            <RadioButton text="Male"/>
                            <RadioButton text="Female"/>
                        </children>
                    </VBox>
                </VBox>
            </children>
        </StackPane>

        <StackPane styleClass="phone" GridPane.rowIndex="7" GridPane.columnIndex="0">
            <children>
                <VBox>
                    <Label text="Phone Number" fx:id="phoneLabel"/>
                    <TextField fx:id="phoneField"/>
                </VBox>
            </children>
        </StackPane>

        <StackPane styleClass="dob" GridPane.rowIndex="8" GridPane.columnIndex="0">
            <children>
                <VBox>
                    <Label text="Birthday" fx:id="dobLabel"/>
                    <DatePicker/>
                </VBox>
            </children>
        </StackPane>

        <HBox styleClass="buttons" GridPane.rowIndex="9" GridPane.columnIndex="0">
            <Button fx:id="register" text="Submit" onAction="#register"/>
        </HBox>
    </children>
</GridPane>
