<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<GridPane fx:controller="appchat.app.controllers.LoginController"
      stylesheets="/css/login.css"
      xmlns:fx="http://javafx.com/fxml">
    <children>
        <Text text="Welcome"
              fx:id="title"
              GridPane.rowIndex="0"
              GridPane.columnSpan="2"
        />

        <Label text="Username"
               fx:id="usernameLabel"
               GridPane.rowIndex="1"
               GridPane.columnIndex="0"
        />

        <TextField fx:id="usernameField"
                   GridPane.rowIndex="2"
                   GridPane.columnIndex="0"
        />

        <Label text="Password"
               fx:id="passwordLabel"
               GridPane.rowIndex="3"
               GridPane.columnIndex="0"
        />

        <PasswordField fx:id="passwordField"
                       GridPane.rowIndex="4"
                       GridPane.columnIndex="0"
        />

        <HBox styleClass="buttons" GridPane.rowIndex="5" GridPane.columnIndex="0">
            <Button fx:id="login" text="Login" onAction="#login"/>
            <Button fx:id="register" text="Register" onAction="#handleRegisterAction"/>
        </HBox>
    </children>
</GridPane>